<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeminiApp.MainPage">

    <Grid RowDefinitions="*,Auto">

        <ScrollView x:Name="ChatScroll" Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                    <Image
                    Source="dotnet_bot.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a hovercraft number nine" />

                    <VerticalStackLayout x:Name="bubbleContainer" Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                    <!--Chat bubbles go in here!-->
                    </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    <Border Grid.Row="1" Stroke="#ddd" Padding="10,5">
        <VerticalStackLayout Spacing="10">
            <Label x:Name="commandTab" Text="Send text to Assistant" Margin="0,0,0,10" />
            <Entry x:Name="inputText" Placeholder="Type here..." Margin="0,0,0,20"  />
            <Button Text="Absenden" Clicked="OnSubmitClicked" IsEnabled="{Binding IsButtonEnabled}"/>
        </VerticalStackLayout>
    </Border>
    </Grid>

</ContentPage>
